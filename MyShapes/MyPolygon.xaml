<UserControl x:Class="MyShapes.MyPolygon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyShapes"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="100" x:Name="root">
    <Grid>
        <Polygon Stroke="{Binding ElementName=root,Path=BorderColor}" 
                 StrokeThickness="{Binding ElementName=root,Path=PolyThickness}" 
                 Points="10,0 100,0 90,60 0,60" Fill="{Binding ElementName=root,Path=FillColor}">
            
        </Polygon>
    </Grid>
</UserControl>
